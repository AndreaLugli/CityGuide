<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/SCG"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:height="40dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/autocomplete"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:textSize="27sp"
            android:maxLines="3"
            android:visibility="gone"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/changeLocation"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal">

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/religionButton"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textOff="@string/religione"
                    android:textOn="@string/religione"
                    android:layout_margin="5dp"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:textSize="25sp" />

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sportButton"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:textOff="@string/sport"
                    android:textOn="@string/sport"
                    android:layout_margin="5dp"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal">

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/natureButton"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:checked="false"
                    android:textOff="@string/natura"
                    android:textOn="@string/natura"
                    android:layout_margin="5dp"
                    android:textSize="25sp" />

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/archButton"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textOff="@string/architettura"
                    android:textOn="@string/architettura"
                    android:checked="false"
                    android:layout_margin="5dp"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal">

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/eduButton"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:checked="false"
                    android:textOff="@string/educazione"
                    android:textOn="@string/educazione"
                    android:layout_margin="5dp"
                    android:textSize="25sp" />

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/traspButton"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:checked="false"
                    android:textOff="@string/trasporti"
                    android:textOn="@string/trasporti"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:id="@+id/search"
            android:textSize="25sp"
            android:layout_below="@+id/spinnerlang"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeLocation"
            android:text="@string/changeLocation"
            android:layout_below="@+id/geotextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/geotextView"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:textSize="27sp"
            android:textIsSelectable="true"
            android:textAlignment="center"
            android:gravity="center" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_below="@+id/linearLayout"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_alignRight="@+id/search"
            android:layout_alignEnd="@+id/search"
            android:layout_marginTop="10dp"
            android:progress="2"
            android:max = "20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/kmView"
            android:layout_alignTop="@+id/seekBar"
            android:layout_toRightOf="@+id/seekBar"
            android:layout_toEndOf="@+id/seekBar"
            android:layout_alignBottom="@+id/seekBar"
            android:textSize="20sp"
            android:gravity="center" />
        <Spinner
            android:id="@+id/spinnerlang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/country_arrays"
            android:prompt="@string/language_prompt"
            android:layout_below="@+id/seekBar"
            android:layout_alignLeft="@+id/seekBar"
            android:layout_alignStart="@+id/seekBar" />

    </RelativeLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F3F3F4"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" ></ListView>

</android.support.v4.widget.DrawerLayout>